pipeline {
    agent any
    stages { 
        stage('build docker images') {
            steps {
              sh 'sudo  docker build -t peter:001 .'
            }
        }

        stage('push to nexus') {
            steps {
                echo 'Hello World'
            }
        }


        stage('push to dockerhub') {
            steps {
                echo 'Hello World'
            }
        }

        stage('push to ansible') {
            steps {
                echo 'Hello World'
            }
        }

        stage('ansible deploy to k8s') {
            steps {
               sh 'sudo  docker build -t peter:001 '
            }
        }

        stage('verify') {
            steps {
                echo 'Hello World'
            }
        }


        stage('clean') {
            steps {
                echo 'Hello World'
            }
        }

    }







}
